<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_green_light">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:background="@drawable/card">


        <TextView
            android:text="Sensitivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/sensitivity_textview"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="normal|italic" />

        <Button
            android:text="-"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/decrease_sensitivity"
            android:layout_weight="2"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/sensitivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:text="0.35"
            android:textAlignment="center"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_green_dark" />

        <Button
            android:text="+"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/increase_sensitivity"
            android:layout_weight="2"
            android:textSize="40sp" />
    </LinearLayout>

    <TextView
        android:text="Taps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/taps_textview"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/taps"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/taps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="100sp"
        android:text="0"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:id="@+id/linearLayout2"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/card">

        <TextView
            android:text="Frequency"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/frequency_textview"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="normal|italic" />

        <Button
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/decrease_frequency"
            android:layout_weight="2"
            android:textSize="40sp"
            android:background="@android:color/transparent" />

        <TextView
            android:text="70"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/frequency"
            android:layout_weight="3"
            android:textAlignment="center"
            android:textSize="30sp"
            android:gravity="center_vertical"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_green_dark" />

        <Button
            android:text="+"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/increase_frequency"
            android:layout_weight="2"
            android:textSize="40sp" />
    </LinearLayout>

    <Button
        android:text="Play"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        android:textSize="100sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent" />

</RelativeLayout>